<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/strCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <ImageView
        android:id="@+id/strImageSource"
        android:layout_width="50dp"
        android:layout_height="50dp"
        ></ImageView>
    <TextView
        android:id="@+id/strIngredient1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <TextView
        android:id="@+id/strIngredient2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <TextView
        android:id="@+id/strIngredient3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <TextView
        android:id="@+id/strDrink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <TextView
        android:id="@+id/strInstructions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>
    <TextView
        android:id="@+id/strAlcoholic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></TextView>

</LinearLayout>